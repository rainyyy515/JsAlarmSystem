<Window x:Class="Js_Alarm_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Js_Alarm_WPF"
        mc:Ignorable="d"
        Title="警報判斷程序" Height="500" Width="400">
    <Grid Background="#285185">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" Margin="0,5,0,0" Foreground="#CCD9E2">警報通知狀態</TextBlock>
        </StackPanel>
        <Border Grid.Row="1" BorderThickness="3" CornerRadius="1" BorderBrush="#CCD9E2" Margin="5">
            <ListBox x:Name="LogInfo" FontSize="16"></ListBox>
        </Border>
    </Grid>
</Window>