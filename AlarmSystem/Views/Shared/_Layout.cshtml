<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link href="~/lib/perfect-scrollbar/css/perfect-scrollbar.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-secondary">
    <div class="d-flex">
        <div id="sidebars" class="d-flex flex-column flex-shrink-0 p-3 text-bg-primary px-0 fixed-start" style="width: 280px;">
            <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none ps-3" asp-controller="Alarm" asp-action="Index">
                <img class="mb-1" src="~/favicon.ico" alt="js" />
                <span class="fs-4 ps-2">警報系統</span>
            </a>
            <hr>
            <ul id="container" class="list-unstyled mb-auto overflow-hidden">
                @await Component.InvokeAsync("GroupAlarmList")
            </ul>
        </div>
        <div id="content" class="flex-grow-1" style="margin-left:280px;">
            <main role="main" class="d-flex flex-column justify-content-between">
                <div class="mb-3">
                    <header>
                        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                            <div class="container-fluid">
                                <button id="listBtn" class="btn btn-primary py-1">
                                    <i class="bi bi-list" style="font-size:20px;"></i>
                                </button>
                                @* <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                                </ul>
                                </div> *@
                                <div class="dropdown">
                                    <a href="#" class="d-flex align-items-center text-primary text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="~/img/default.jpg" alt="" width="32" height="32" class="rounded-circle me-2">
                                        <strong>yanwei</strong>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" style="right:0;left:auto;">
                                        <li><a class="dropdown-item" href="#">個人資訊</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="#">登出</a></li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </header>
                    @RenderBody()
                </div>
                <footer class="border-top footer text-muted fixed-bottom z-0">
                    <div class="container">
                        &copy; 2024 - JseneAlarmSystem
                    </div>
                </footer>
            </main>
        </div>
    </div>
    <script src="~/lib/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
